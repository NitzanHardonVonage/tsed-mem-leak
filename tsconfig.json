{
	"compilerOptions": {
		"outDir": "./out",
		"rootDir": "./src",
		"target": "es2019",
		"lib": [
			"es7",
			"dom"
		],
		"types": [
			"node",
			"express",
			"reflect-metadata",
			"jest"
		],
		"typeRoots": [
			"./typings",
			"./node_modules/@types"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"declaration": false,
		"esModuleInterop": true,
		"baseUrl": "./src"
	},
	"exclude": [
		"node_modules",
		"out",
	]
}
